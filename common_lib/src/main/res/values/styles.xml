<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:statusBarColor">@android:color/black</item>-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/layer_splash_bg</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    <style name="AppTheme.MD" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:statusBarColor">@android:color/black</item>-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BtTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabPaddingTop">20dp</item>
    </style>
    <style name="MTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">#aaffffff</item>
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B2A04D4D</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>